{
    "$id": "ObligationDefined.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ObligationDefined",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "type": {
            "type": "string",
            "const": "ObligationDefined"
        },
        "payload": {
            "type": "object",
            "properties": {
                "statement": {
                    "type": "string"
                },
                "assignedTo": {
                    "type": "string"
                },
                "sourceDocId": {
                    "type": "string"
                },
                "criticality": {
                    "type": "string",
                    "enum": [
                        "high",
                        "medium",
                        "low"
                    ]
                }
            },
            "required": [
                "statement",
                "assignedTo",
                "sourceDocId"
            ]
        }
    },
    "required": [
        "id",
        "timestamp",
        "type",
        "payload"
    ]
}