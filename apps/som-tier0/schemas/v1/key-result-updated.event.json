{
    "$id": "http://som.tier0/schemas/v1/key-result-updated.event.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "type": {
            "type": "string",
            "const": "KeyResultUpdated"
        },
        "payload": {
            "type": "object",
            "properties": {
                "keyResultId": {
                    "type": "string"
                },
                "objectiveId": {
                    "type": "string"
                },
                "metricName": {
                    "type": "string"
                },
                "currentValue": {
                    "type": "number"
                },
                "targetValue": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                },
                "confidence": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                }
            },
            "required": [
                "keyResultId",
                "objectiveId",
                "currentValue",
                "targetValue"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "id",
        "timestamp",
        "type",
        "payload"
    ],
    "additionalProperties": false
}