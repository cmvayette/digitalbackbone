{
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "const": "Objective"
        },
        "properties": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
                },
                "level": {
                    "type": "string",
                    "enum": [
                        "strategic",
                        "operational",
                        "tactical"
                    ]
                },
                "timeHorizon": {
                    "type": "string",
                    "format": "date-time"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "proposed",
                        "approved",
                        "active",
                        "achieved",
                        "abandoned",
                        "revised"
                    ]
                }
            },
            "additionalProperties": false,
            "required": [
                "description",
                "level",
                "timeHorizon",
                "status"
            ]
        },
        "id": {
            "type": "string"
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        },
        "createdBy": {
            "type": "string"
        },
        "status": {
            "enum": [
                "active",
                "inactive"
            ],
            "type": "string"
        },
        "sourceDocuments": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "createdAt",
        "createdBy",
        "id",
        "properties",
        "sourceDocuments",
        "status",
        "type"
    ],
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://som.tier0/schemas/v1/objective.schema.json"
}