{
    "$id": "http://som.tier0/schemas/v1/obligation-defined.event.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "type": {
            "type": "string",
            "const": "ObligationDefined"
        },
        "payload": {
            "type": "object",
            "properties": {
                "statement": {
                    "type": "string"
                },
                "assignedTo": {
                    "type": "string",
                    "description": "ID of the Position or Organization assigned this obligation"
                },
                "sourceDocId": {
                    "type": "string"
                },
                "trigger": {
                    "type": "string"
                },
                "action": {
                    "type": "string"
                },
                "criticality": {
                    "type": "string",
                    "enum": [
                        "low",
                        "medium",
                        "high",
                        "critical"
                    ]
                }
            },
            "required": [
                "statement",
                "assignedTo",
                "sourceDocId"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "id",
        "timestamp",
        "type",
        "payload"
    ],
    "additionalProperties": false
}