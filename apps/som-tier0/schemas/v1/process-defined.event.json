{
    "$id": "http://som.tier0/schemas/v1/process-defined.event.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "type": {
            "type": "string",
            "const": "ProcessDefined"
        },
        "payload": {
            "type": "object",
            "properties": {
                "processId": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "ownerOrgId": {
                    "type": "string"
                },
                "steps": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "description": {
                                "type": "string"
                            },
                            "owner": {
                                "type": "string",
                                "description": "Position ID or Role ID"
                            },
                            "obligationId": {
                                "type": "string",
                                "description": "Optional ID of the obligation this step satisfies"
                            }
                        },
                        "required": [
                            "name",
                            "owner"
                        ]
                    }
                }
            },
            "required": [
                "processId",
                "name",
                "steps"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "id",
        "timestamp",
        "type",
        "payload"
    ],
    "additionalProperties": false
}