{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://som.tier0/schemas/v1/process.schema.json",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "const": "Process"
        },
        "id": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "version": {
            "type": "string",
            "default": "1.0.0"
        },
        "status": {
            "type": "string",
            "enum": [
                "draft",
                "active",
                "deprecated",
                "archived"
            ],
            "default": "draft"
        },
        "ownerOrgId": {
            "type": "string",
            "description": "ID of the Organization that owns this process"
        },
        "steps": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "owner": {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "Position",
                                    "Organization",
                                    "RoleTag"
                                ]
                            },
                            "id": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "type",
                            "id"
                        ]
                    },
                    "obligationLinks": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "IDs of Obligations satisfied by this step"
                    },
                    "attachments": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "url": {
                                    "type": "string"
                                },
                                "type": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "nextSteps": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "IDs of the next steps. Supports branching."
                    }
                },
                "required": [
                    "id",
                    "title",
                    "owner"
                ]
            }
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        },
        "createdBy": {
            "type": "string"
        },
        "updatedAt": {
            "type": "string",
            "format": "date-time"
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "id",
        "type",
        "name",
        "status",
        "steps",
        "createdAt",
        "createdBy"
    ],
    "additionalProperties": false
}