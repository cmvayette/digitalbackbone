{
    "$id": "http://som.tier0/schemas/v1/task-created.event.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "type": {
            "type": "string",
            "const": "TaskCreated"
        },
        "payload": {
            "type": "object",
            "properties": {
                "taskId": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "assigneeId": {
                    "type": "string",
                    "description": "Position ID"
                },
                "priority": {
                    "type": "string",
                    "enum": [
                        "low",
                        "medium",
                        "high",
                        "critical"
                    ]
                },
                "dueDate": {
                    "type": "string",
                    "format": "date-time"
                },
                "sourceReference": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string"
                        },
                        "id": {
                            "type": "string"
                        }
                    }
                }
            },
            "required": [
                "taskId",
                "title",
                "assigneeId",
                "priority"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "id",
        "timestamp",
        "type",
        "payload"
    ],
    "additionalProperties": false
}