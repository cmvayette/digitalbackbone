{
    "$id": "http://som.tier0/schemas/v1/task-reassigned.event.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "type": {
            "type": "string",
            "const": "TaskReassigned"
        },
        "payload": {
            "type": "object",
            "properties": {
                "taskId": {
                    "type": "string"
                },
                "previousAssigneeId": {
                    "type": "string"
                },
                "newAssigneeId": {
                    "type": "string"
                },
                "reason": {
                    "type": "string"
                },
                "reassignedBy": {
                    "type": "string"
                }
            },
            "required": [
                "taskId",
                "newAssigneeId"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "id",
        "timestamp",
        "type",
        "payload"
    ],
    "additionalProperties": false
}