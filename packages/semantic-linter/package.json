{
    "name": "@som/semantic-linter",
    "version": "0.1.0",
    "description": "Static analysis tool for enforcing Semantic Operating Model architectural rules",
    "main": "dist/index.js",
    "bin": {
        "som-lint": "./dist/index.js"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./runtime": {
            "types": "./dist/runtime/validator.d.ts",
            "default": "./dist/runtime/validator.js"
        }
    },
    "scripts": {
        "build": "tsc",
        "start": "ts-node src/index.ts",
        "test": "vitest",
        "lint": "tsc --noEmit"
    },
    "dependencies": {
        "chalk": "^4.1.2",
        "commander": "^11.1.0",
        "ts-morph": "^27.0.2",
        "typescript": "~5.9.3"
    },
    "devDependencies": {
        "@types/node": "^20.10.4",
        "ts-node": "^10.9.2",
        "vitest": "^4.0.15"
    }
}
